{{#if addNewAnnouncement}}
  <div>
    <form>
      <div class="form-group">
        <label for="title">Announcement Title</label>
        {{input value=title id="title"}}
      </div>

      <div class="form-group">
        <label for="body">Body</label><br>
        {{textarea value=body id="body"}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>
      <button {{action 'saveAnnouncement'}} class="btn btn-success">Post</button>

    </form>
  </div>
{{else}}
  <button {{action 'announcementFormShow'}}>New Announcement</button>
{{/if}}
